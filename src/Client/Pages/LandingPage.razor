@layout LandingLayout
@page "/landing_page"

<MudContainer Class="d-flex flex-column justify-center" MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@L["Welcome on the page of {0}",CUSTOMER_NAME]</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">@L["This is the landing page for the volunteers of {0}.",CUSTOMER_NAME]</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">@L["Click the button below to login."]</MudText>
    <MudPaper Class="flex justify-center" Elevation="0">
    <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowDownward" Style="background-color: yellowgreen; color: white; width: 200px; height: 60px;" Href="/authentication/login">
        @L["Login"]
    </MudButton>
    </MudPaper>
</MudContainer>

@code {
    [Inject] private IStringLocalizer<LandingPage> L { get; set; } = default!;
    private const string CUSTOMER_NAME = "KNRM Huizen";
}
