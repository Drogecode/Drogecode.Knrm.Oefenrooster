@page "/planner/calendar"
@attribute [Authorize]
@using Drogecode.Knrm.Oefenrooster.Client.Pages.Planner.Components
@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule;

<MudButton Variant="Variant.Filled" Class="ml-2 mt-2" OnClick="async ()=>{await AddWeekToCalendar(false);}">@LApp["Add week"]</MudButton>
<br />
@if (_calendarForUser.Count == 0)
{
    <MudSkeleton />
    <MudSkeleton />
    <MudSkeleton />
    <MudSkeleton />
}
@foreach (var trainingWeek in _calendarForUser)
{
    @if (_month != trainingWeek.First().Date.Month)
    {
        _month = trainingWeek.First().Date.Month;
        <MudText Typo="Typo.h3" Class="ml-2 mt-12">
            @trainingWeek.First().Date.ToString(@trainingWeek.First().Date.Year == DateTime.Today.Year ? "MMMM" : "MMMM yyyy",Thread.CurrentThread.CurrentCulture)
        </MudText>
    }
    <MudPaper Elevation="0" Class="d-flex align-content-start flex-wrap flex-grow-1 gap-4 mx-2 my-4">
        @foreach (var training in trainingWeek)
        {
            <CalendarBlock Training="training" />
        }
    </MudPaper>
}
<br />
<MudButton Variant="Variant.Filled" Class="ml-2 mb-2" OnClick="async ()=>{await AddWeekToCalendar(true);}">@LApp["Add week"]</MudButton>
