@page "/planner/calendar"
@attribute [Authorize]
@using Drogecode.Knrm.Oefenrooster.Client.Pages.Planner.Components
@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule;

<MudButton Variant="Variant.Filled" Class="ml-2" OnClick="async ()=>{await AddWeekToCalendar(false);}">@L["Add week"]</MudButton>
<br />
@foreach (var trainingWeek in _calendarForUser)
{
    @if (_month != trainingWeek.First().Date.Month)
    {
        _month = trainingWeek.First().Date.Month;
        <MudText Typo="Typo.h3" Class="ml-2 mt-12">@trainingWeek.First().Date.ToString(@trainingWeek.First().Date.Year == DateTime.Today.Year ? "MMMM" : "MMMM yyyy")</MudText>
    }
    <MudPaper Elevation="0" Class="d-flex align-content-start flex-wrap flex-grow-1 gap-4 mx-2 my-4">
        @foreach (var training in trainingWeek)
        {
            <CalendarBlock Training="training" />
        }
    </MudPaper>
}
<br />
<MudButton Variant="Variant.Filled" Class="ml-2" OnClick="async ()=>{await AddWeekToCalendar(true);}">@L["Add week"]</MudButton>

@code {
    [Inject] private IStringLocalizer<Calendar> L { get; set; } = default!;
    [Inject] private ScheduleRepository _scheduleRepository { get; set; } = default!;
    [Parameter] public Guid CustomerId { get; set; } = Guid.Empty;
    private LinkedList<List<Training>> _calendarForUser = new();
    private int? _month;
    private int _high = -1;
    private int _low = -2;

    protected override async Task OnInitializedAsync()
    {
        for (int i = -1; i < 6; i++)
        {
            await AddWeekToCalendar(true);
        }
    }

    private async Task AddWeekToCalendar(bool high)
    {
        List<Training> scheduleForUser = new();
        var trainingsInWeek = (await _scheduleRepository.CalendarForUser(high ? _high : _low))?.Trainings;
        if (trainingsInWeek != null)
            foreach (var training in trainingsInWeek)
                scheduleForUser.Add(training);
        if (high)
        {
            _calendarForUser.AddLast(scheduleForUser);
            _high++;
        }
        else
        {
            _calendarForUser.AddFirst(scheduleForUser);
            _low--;
        }
        StateHasChanged();
    }
}
