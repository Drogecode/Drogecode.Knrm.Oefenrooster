@page "/planner/schedule"
@attribute [Authorize]
@using Drogecode.Knrm.Oefenrooster.Client.Pages.Planner.Components
@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule;

<MudButton Variant="Variant.Filled" Class="ml-2 mt-2" OnClick="async ()=>{await AddWeekToSchadules(false);}">@LApp["Add week"]</MudButton>
<br />
@if (_scheduleForUser.Count == 0)
{
    <MudSkeleton />
    <MudSkeleton />
    <MudSkeleton />
    <MudSkeleton />
}
@foreach (var plannesInWeek in _scheduleForUser)
{
    @if (plannesInWeek != null && plannesInWeek.Count > 0)
    {
        @if (_month != plannesInWeek.First().Date.Month)
        {
            _month = plannesInWeek.First().Date.Month;
            <MudText Typo="Typo.h3" Class="ml-2 mt-12">@plannesInWeek.First().Date.ToString(plannesInWeek.First().Date.Year == DateTime.Today.Year ? "MMMM" : "MMMM yyyy")</MudText>
        }

        <MudPaper Elevation="0" Class="d-flex align-content-start flex-wrap flex-grow-1 gap-4 mx-2 my-4">
            @foreach (var training in plannesInWeek)
            {
                <ScheduleBlock Planner="training" Users="_users" Functions="_functions" />
            }
    </MudPaper>
    }
}
<br />
<MudButton Variant="Variant.Filled" Class="ml-2 mb-2" OnClick="async ()=>{await AddWeekToSchadules(true);}">@LApp["Add week"]</MudButton>