@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
@using Drogecode.Knrm.Oefenrooster.Client.Helpers;
<CalendarBaseCard MinWidth="@MinWidth" MaxWidth="@MaxWidth" Width="@Width" Training="@Training" ShowDate="@ShowDate" ShowDayOfWeek="@ShowDayOfWeek" SetBy="@Training.SetBy">
    <ChipContent>
        <ReadMoreChip Planner="Training"/>
    </ChipContent>
    <ChildContent>
        <MudPaper Class="@PlannerHelper.StyleAvailabilty(Training.Availability)">
            <MudSelect T="Availability?" Label="@LApp["Availability"]" Variant="Variant.Text" @bind-Value="Training.Availability" SelectedValuesChanged="OnChange"
                       AdornmentColor="@PlannerHelper.ColorAvailabilty(Training.Availability)" Disabled="@(Training.DateStart.CompareTo(DateTime.UtcNow) < 0)">
                <MudSelectItem T="Availability?" Value="Availability.Available">@LApp["Available"]</MudSelectItem>
                <MudSelectItem T="Availability?" Value="Availability.NotAvailable">@LApp["NotAvailable"]</MudSelectItem>
                <MudSelectItem T="Availability?" Value="Availability.Maybe">@LApp["Maybe"]</MudSelectItem>
            </MudSelect>
        </MudPaper>
    </ChildContent>
</CalendarBaseCard>