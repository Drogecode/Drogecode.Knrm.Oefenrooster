@using Drogecode.Knrm.Oefenrooster.Client.Pages.Components
@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule
@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
@using Drogecode.Knrm.Oefenrooster.Client.Helpers
<CalendarBaseCard Width="100%" Training="@Training" >
    <MudCardActions>
        <MudSelect T="Availabilty?" Label="@LApp["Availibility"]" Variant="Variant.Text" @bind-Value="Training.Availabilty" SelectedValuesChanged="OnChange" AdornmentColor="@PlannerHelper.ColorAvailabilty(Training.Availabilty)">
            <MudSelectItem T="Availabilty?" Value="Availabilty.Available">@LApp["Available"]</MudSelectItem>
            <MudSelectItem T="Availabilty?" Value="Availabilty.NotAvailable">@LApp["NotAvailable"]</MudSelectItem>
            <MudSelectItem T="Availabilty?" Value="Availabilty.Maybe">@LApp["Maybe"]</MudSelectItem>
        </MudSelect>
    </MudCardActions>
</CalendarBaseCard>