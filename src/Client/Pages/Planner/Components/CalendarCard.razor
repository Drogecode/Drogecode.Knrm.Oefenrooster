@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule;
@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
@using Drogecode.Knrm.Oefenrooster.Client.Helpers;
@using Drogecode.Knrm.Oefenrooster.Client.Components.DrogeCode;
<CalendarBaseCard MinWidth="@MinWidth" MaxWidth="@MaxWidth" Width="@Width" Training="@Training" ShowDate="@ShowDate" ShowDayOfWeek="@ShowDayOfWeek" SetBy="@Training.SetBy">
    <MudPaper Class="@PlannerHelper.StyleAvailabilty(Training.Availabilty)">
        <MudSelect T="Availabilty?" Label="@LApp["Availibility"]" Variant="Variant.Text" @bind-Value="Training.Availabilty" SelectedValuesChanged="OnChange" AdornmentColor="@PlannerHelper.ColorAvailabilty(Training.Availabilty)" Disabled="@(Training.DateStart.CompareTo(DateTime.UtcNow) < 0)">
            <MudSelectItem T="Availabilty?" Value="Availabilty.Available">@LApp["Available"]</MudSelectItem>
            <MudSelectItem T="Availabilty?" Value="Availabilty.NotAvailable">@LApp["NotAvailable"]</MudSelectItem>
            <MudSelectItem T="Availabilty?" Value="Availabilty.Maybe">@LApp["Maybe"]</MudSelectItem>
        </MudSelect>
    </MudPaper>
</CalendarBaseCard>