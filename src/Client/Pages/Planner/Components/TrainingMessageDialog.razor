<MudDialog>
    <DialogContent>
        @if (_description?.Description is not null)
        {
            <AuthorizeView Roles="@AccessesNames.AUTH_super_user">
                <MudChip T="string">@_description.ElapsedMilliseconds</MudChip>
            </AuthorizeView>
            <MudMarkdown Value="@_description.Description" />
        }
        else if (_description is not null)
        {
            <MudText>@L["No description found"]</MudText>
        }
        else
        {
            <DrogeLoading />
        }
    </DialogContent>
</MudDialog>