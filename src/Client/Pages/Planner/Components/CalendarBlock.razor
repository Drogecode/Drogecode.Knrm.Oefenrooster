@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule
@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
<MudPaper Width="200px" Elevation="0">
    <MudCard>
        <MudCardContent>
            @if (string.IsNullOrEmpty(Training.Name))
            {
                <MudText Typo="Typo.h6" Color="ColorHeader">@Training.Date.ToString("dddd")</MudText>
            }
            else
            {
                <MudText Typo="Typo.h6" Color="ColorHeader">@Training.Name</MudText>
            }
            <MudText Typo="Typo.subtitle2">@Training.Date.ToString(DateTime.Today.Year == Training.Date.Year ? "MMM dd" : "yyyy MMM dd")</MudText>
            <MudText Typo="Typo.body2">@Training.Date.ToString("HH:mm") @LApp["till"] @Training.Date.AddMinutes(Training.Duration).ToString("HH:mm")</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudSelect T="Availabilty?" Label="@LApp["Availibility"]" Variant="Variant.Text" @bind-Value="Training.Availabilty" SelectedValuesChanged="OnChange">
                <MudSelectItem T="Availabilty?" Value="Availabilty.Available">@LApp["Available"]</MudSelectItem>
                <MudSelectItem T="Availabilty?" Value="Availabilty.NotAvailable">@LApp["NotAvailable"]</MudSelectItem>
                <MudSelectItem T="Availabilty?" Value="Availabilty.Maybe">@LApp["Maybe"]</MudSelectItem>
            </MudSelect>
        </MudCardActions>
    </MudCard>
</MudPaper>
