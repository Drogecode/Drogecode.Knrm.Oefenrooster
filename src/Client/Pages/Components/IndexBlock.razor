@using Drogecode.Knrm.Oefenrooster.Client.Repositories;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.Schedule
@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
<MudPaper Width="200px" Elevation="0">
    <MudCard>
        <MudCardHeader Class="@HeaderClass">
            <CardHeaderContent>
                @if (string.IsNullOrEmpty(Training.Name))
                {
                    <MudText Typo="Typo.h6">@Training.Date.ToString("dddd")</MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">@Training.Name</MudText>
                }
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Color="@ColorAvailabilty" Typo="Typo.subtitle2">@LApp[Training?.Availabilty.ToString() ?? "None"]</MudText>
            <MudText Typo="Typo.subtitle2">@Training.Date.ToString(DateTime.Today.Year == Training.Date.Year ? "MMM dd" : "yyyy MMM dd")</MudText>
            <MudText Typo="Typo.body2">@Training.Date.ToString("HH:mm") @LApp["till"] @Training.Date.AddMinutes(Training.Duration).ToString("HH:mm")</MudText>
        </MudCardContent>
    </MudCard>
</MudPaper>
