@page "/user/vacations/add"
@page "/user/vacations/edit/{Id:guid}"
@attribute [Authorize]

<MudText Typo="Typo.h4">@(_isNew ? L["Add vacation"] : L["Edit vacation"])</MudText>
@if (_holiday is not null)
{
    @if (!string.IsNullOrEmpty(_error))
    {
        <MudAlert Severity="Severity.Warning">@_error</MudAlert>
    }
    <MudTextField Label="@L["Description"]" @bind-Value="_holiday.Description" Counter="@DefaultSettingsHelper.MAX_LENGTH_HOLIDAY_NAME" MaxLength="@DefaultSettingsHelper.MAX_LENGTH_HOLIDAY_NAME" Disabled="@_isSaving"/>
    <MudDatePicker Label="@L["Valid from"]" @bind-Date="_holiday.ValidFrom" Validation="@(new Func<DateTime?, string?>(ValidateStartDate))" Disabled="@(_originalHoliday?.ValidFrom?.InPast() ?? false || _isSaving)" Required/>
    <MudDatePicker Label="@L["Valid till"]" @bind-Date="_holiday.ValidUntil" StartMonth="_holiday.ValidFrom" Validation="@(new Func<DateTime?, string?>(ValidateTillDate))" Disabled="@(_originalHoliday?.ValidUntil?.InPast() ?? false || _isSaving)" Required/>

    <MudButton OnClick="@Cancel" Disabled="@_isSaving">@LApp["Cancel"]</MudButton>
    <MudButton OnClick="@Submit" Disabled="@_isSaving">@LApp["Submit"]</MudButton>
}
else
{
    <DrogeLoading />
}