@using Drogecode.Knrm.Oefenrooster.Shared.Enums;
<MudDialog>
    <DialogContent>
        @if (DefaultUserSchedule is not null)
        {
            <MudSelect T="Availability?" Label="@LApp["Availability"]" Variant="Variant.Text" @bind-Value="DefaultUserSchedule.Availability" AdornmentColor="@PlannerHelper.ColorAvailabilty(DefaultUserSchedule.Availability)">
                <MudSelectItem T="Availability?" Value="Availability.Available">@LApp["Available"]</MudSelectItem>
                <MudSelectItem T="Availability?" Value="Availability.NotAvailable">@LApp["NotAvailable"]</MudSelectItem>
                <MudSelectItem T="Availability?" Value="Availability.Maybe">@LApp["Maybe"]</MudSelectItem>
            </MudSelect>
            <MudDatePicker Label="@LApp["ValidFrom"]" @bind-Date="DefaultUserSchedule.ValidFromUser" Disabled="@(DefaultUserSchedule.ValidFromUser?.InPast() ?? false)" />
            <MudDatePicker Label="@LApp["ValidUntil"]" @bind-Date="DefaultUserSchedule.ValidUntilUser" Disabled="@(DefaultUserSchedule.ValidUntilUser?.InPast() ?? false)" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LApp["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@LApp["Submit"]</MudButton>
    </DialogActions>
</MudDialog>