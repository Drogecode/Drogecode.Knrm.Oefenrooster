<MudDialog>
    <DialogContent>
        @if (Holiday is not null)
        {
            <MudTextField Label="@L["Description"]" @bind-Value="Holiday.Description" MaxLength="@DefaultSettingsHelper.MAX_LENGTH_TRAINING_TITLE" />
            <MudDatePicker Label="@L["Valid from"]" @bind-Date="Holiday.ValidFrom" Validation="@(new Func<DateTime?, string?>(ValidateStartDate))" Disabled="@(_originalHoliday?.ValidFrom?.InPast() ?? false)" Required />
            <MudDatePicker Label="@L["Valid till"]" @bind-Date="Holiday.ValidUntil" Validation="@(new Func<DateTime?, string?>(ValidateTillDate))" Disabled="@(_originalHoliday?.ValidUntil?.InPast() ?? false)" Required />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LApp["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@LApp["Submit"]</MudButton>
    </DialogActions>
</MudDialog>