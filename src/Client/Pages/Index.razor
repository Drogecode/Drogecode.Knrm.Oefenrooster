@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

@if (_isAuthenticated)
{
    <p>Hello @_name</p>
    <div>
        <table cellpadding="2" cellspacing="2">
            <tr>
                <th>Claim</th>
                <th>Value</th>
            </tr>
            @foreach (var claim in _user.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>Welcome to your new app.</p>
}
