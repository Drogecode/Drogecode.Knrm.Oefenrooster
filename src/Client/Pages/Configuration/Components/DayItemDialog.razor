@using Drogecode.Knrm.Oefenrooster.Shared.Enums
<MudDialog>
    <DialogContent>
        @if (DayItem is not null)
        {
            <MudSelect T="CalendarItemType" Label="@L["Type"]" Variant="Variant.Text" @bind-Value="DayItem.Type">
                <MudSelectItem T="CalendarItemType" Value="CalendarItemType.Default">@L["Default"]</MudSelectItem>
                <MudSelectItem T="CalendarItemType" Value="CalendarItemType.Custom">@L["Custom"]</MudSelectItem>
                <MudSelectItem T="CalendarItemType" Value="CalendarItemType.PersonPublic">@L["PersonPublic"]</MudSelectItem>
                <MudSelectItem T="CalendarItemType" Value="CalendarItemType.SpecialDate" Disabled>@L["SpecialDate"]</MudSelectItem>
            </MudSelect>
            <SelectMultipleUsers Users="@Users" Functions="@Functions" Selection="@_selectedUsersAction" SelectionChanged="OnSelectionChanged" MultiSelection="false" />
            <MudTextField Label="@L["Description"]" @bind-Value="DayItem.Text" MaxLength="@DefaultSettingsHelper.MAX_LENGTH_TRAINING_TITLE" />
            <MudDateRangePicker Label="@L["date range"]" @bind-DateRange="_dateRange" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LApp["Cancel"]</MudButton>
            <MudButton Color="Color.Primary" OnClick="Submit">@LApp["Submit"]</MudButton>
        </DialogActions>
    </MudDialog>