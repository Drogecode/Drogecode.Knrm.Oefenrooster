@attribute [Authorize(Roles = AccessesNames.AUTH_configure_training_types)]
<MudDialog>
    <DialogContent>
        @if (TrainingType is not null)
        {
            <MudForm @ref="_form" @bind-IsValid="@_success" @bind-Errors="@_errors">
                <MudTextField T="string" @bind-Value="@TrainingType.Name" Label="@L["Description"]" Required="true" RequiredError="@L["Description is required"]" id="trainingtype-edit-name" />
                <MudColorPicker Label="@L["Light background"]" @bind-Text="@TrainingType.ColorLight" Style="@($"color: {@TrainingType.ColorLight};")" Placeholder="@L["Select Color"]" DisableToolbar="false" id="trainingtype-edit-color-light" />
                <MudColorPicker Label="@L["Light text"]" @bind-Text="@TrainingType.TextColorLight" Style="@($"color: {@TrainingType.TextColorLight};")" Placeholder="@L["Select Color"]" DisableToolbar="false" id="trainingtype-edit-text-light" />
                <MudColorPicker Label="@L["Dark background"]" @bind-Text="@TrainingType.ColorDark" Style="@($"color: {@TrainingType.ColorDark};")" Placeholder="@L["Select Color"]" DisableToolbar="false" id="trainingtype-edit-color-dark" />
                <MudColorPicker Label="@L["Dark text"]" @bind-Text="@TrainingType.TextColorDark" Style="@($"color: {@TrainingType.TextColorDark};")" Placeholder="@L["Select Color"]" DisableToolbar="false" id="trainingtype-edit-text-dark" />
                <MudCheckBox Label="@L["CountToTrainingTarget"]" @bind-Checked="@TrainingType.CountToTrainingTarget"></MudCheckBox>
                <MudCheckBox Label="@L["IsDefault"]" @bind-Checked="@TrainingType.IsDefault"></MudCheckBox>
                <MudCheckBox Label="@L["IsActive"]" @bind-Checked="@TrainingType.IsActive"></MudCheckBox>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LApp["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@LApp["Ok"]</MudButton>
    </DialogActions>
</MudDialog>