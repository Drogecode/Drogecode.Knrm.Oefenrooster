@using Drogecode.Knrm.Oefenrooster.Shared.Enums
<MudDialog>
    <DialogContent>
        @if (TrainingTarget is not null)
        {
            <MudForm @ref="_form" @bind-IsValid="@_success" @bind-Errors="@_errors">
                <MudNumericField Label="@LApp["Order"]" @bind-Value="@TrainingTarget.Order" />
                <MudTextField T="string" Label="@LApp["Name"]" @bind-Value="@TrainingTarget.Name" />
                @*<MudTextField T="string" Label="@LApp["Description"]" @bind-Value="@TrainingTarget.Description" />*@
                <MudTextField T="string" Label="@L["Url"]" @bind-Value="@TrainingTarget.Url" />
                <MudTextField T="string" Label="@L["UrlDescription"]" @bind-Value="@TrainingTarget.UrlDescription" />
                <MudSelect T="TrainingTargetType" @bind-Value="@TrainingTarget.Type" Label="@LApp["Type"]">
                    @foreach (var trainingTargetType in Enum.GetValues<TrainingTargetType>())
                    {
                        <MudSelectItem T="TrainingTargetType" Value="@trainingTargetType">@L[trainingTargetType.ToString()]</MudSelectItem>       
                    }
                </MudSelect>
                <MudSelect T="TrainingTargetGroup" @bind-Value="@TrainingTarget.Group" Label="@L["Group"]">
                    @foreach (var trainingTargetGroup in Enum.GetValues<TrainingTargetGroup>())
                    {
                        <MudSelectItem T="TrainingTargetGroup" Value="@trainingTargetGroup">@L[trainingTargetGroup.ToString()]</MudSelectItem>       
                    }
                </MudSelect>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">@LApp["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="@Submit">@LApp["Submit"]</MudButton>
    </DialogActions>
</MudDialog>