@page "/configuration/user-roles"
@attribute [Authorize(Roles = AccessesNames.AUTH_configure_user_roles)]
@if (_userRoles is not null)
{
    <MudButton OnClick='() => Navigation.NavigateTo("/configuration/user-roles/add/")'>@L["Add new role"]</MudButton>
}
@if (_userRoles?.Roles is not null && _userRoles.Roles.Any())
{
    <MudList T="string">
        @foreach (var role in _userRoles.Roles)
        {
            <MudListItem T="string" OnClick="() => ClickUserRole(role)">
                @role.Name
            </MudListItem>
        }
    </MudList>
}
else if (_userRoles is null)
{
    <MudSkeleton/>
    <MudSkeleton/>
    <MudSkeleton/>
    <MudSkeleton/>
}