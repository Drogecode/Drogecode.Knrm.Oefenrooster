@page "/precom/alerts"
@using Drogecode.Knrm.Oefenrooster.Shared.Models.PreCom
@using System.Web
@using System.Text.RegularExpressions
@using System.Text.Json
@attribute [Authorize]
<MudText Typo="Typo.h1">Precom alerts</MudText>

@if (_alerts is not null)
{
    <MudDataGrid Items="@_alerts.OrderByDescending(x=>x.SendTime)"
                 ReadOnly="true" EditMode="@DataGridEditMode.Cell">
        <Columns>
            <HierarchyColumn T="PreComAlert" />
            <PropertyColumn Property="x => x.Priority" Title="Nr" />
            <PropertyColumn Property="x => x.SendTime" Title="@L["SendTime"]">
                <CellTemplate>
                    <DateToString DateTimeUtc="context.Item.SendTime" ShowDate="true" ShowTime="true" />
                </CellTemplate>
            </PropertyColumn>
            <PropertyColumn Property="x => x.Alert" Title="@L["Alert"]" />
        </Columns>
        <ChildRowContent>
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@context.Item.Alert</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <pre>
                        @(JsonPrettify(context.Item.RawJson))
                    </pre>
                </MudCardContent>
            </MudCard>
        </ChildRowContent>
    </MudDataGrid>

    if (!_showHowTo)
    {
        <MudButton OnClick="()=>_showHowTo = true">@L["Show how to configure"]</MudButton>
    }
    if (_showHowTo && _user is not null)
    {
        <CopyToClipboard Text="@(Navigation.BaseUri + "api/PreCom/web-hook/" + _user.CustomerId + "/" + _user.Id)" />
        <hr />
        <img src="/Images/PreCom/IMG_6685.PNG" asp-append-version="true" width="@(1170/3)px" hight="@(2532/3)px" />
        <img src="/Images/PreCom/IMG_6686.PNG" asp-append-version="true" width="@(1170/3)px" hight="@(2532/3)px" />
        <img src="/Images/PreCom/IMG_6687.PNG" asp-append-version="true" width="@(1170/3)px" hight="@(2532/3)px" />
    }
}