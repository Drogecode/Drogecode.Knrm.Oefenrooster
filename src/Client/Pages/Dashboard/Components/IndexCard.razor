@using Drogecode.Knrm.Oefenrooster.Client.Helpers;
@using Drogecode.Knrm.Oefenrooster.Client.Pages.Planner.Components;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.User;
@using Drogecode.Knrm.Oefenrooster.Shared.Models.TrainingTypes;
@if (_planUser != null)
{
    <ScheduleCard MinWidth="@MinWidth" MaxWidth="@MaxWidth" ReplaceEmptyName="true" ShowDate="true" Planner="Training" Users="Users" Functions="Functions" Vehicles="Vehicles" TrainingTypes="TrainingTypes" ShowDayOfWeek="ShowDayOfWeek" >
        <MudText Color="@PlannerHelper.ColorAvailabilty(_planUser.Availability)" Typo="Typo.subtitle2">@LApp[_planUser.Availability.ToString() ?? "None"]</MudText>
        @if (Functions != null && Training.PlannedFunctionId != User?.UserFunctionId && Functions.Any(x => x.Id == Training.PlannedFunctionId))
        {
            <MudChip Color="Color.Info">
                @($"{LApp["As"]} - {Functions.FirstOrDefault(x => x.Id == Training.PlannedFunctionId)?.Name}")
            </MudChip>
        }
    </ScheduleCard>
}