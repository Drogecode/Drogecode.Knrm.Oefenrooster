<MudPaper Class="pa-4 inline-flex" Width="100%" MaxWidth="800px">
    <MudTextField Value="@Text" ReadOnly="true" />
    <MudButton OnClick="CopyTextToClipboard">@L["Copy"]</MudButton>
</MudPaper>

<script>
    window.clipboardCopy = {
        copyText: function (text, message) {
            navigator.clipboard.writeText(text).then(function () {
                alert(message);
            })
                .catch(function (error) {
                    alert(error);
                });
        }
    };
</script>