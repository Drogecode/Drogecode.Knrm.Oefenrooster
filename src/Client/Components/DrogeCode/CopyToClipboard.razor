@if (TextField is not null)
{
    <MudPaper Class="pa-4 inline-flex space-x-2" Width="100%" MaxWidth="800px">
        @if (Label is not null)
        {
            <MudText>@Label</MudText>
        }
        <MudTextField Value="@TextField" ReadOnly="true"/>
        <MudButton Color="Color.Primary" OnClick="() => CopyTextToClipboard(TextField)">@L["Copy"]</MudButton>
    </MudPaper>
}
else if (TrustedHtmlText is not null)
{
    <div>@((MarkupString)TrustedHtmlText)</div>
    <div>
        <MudButton Color="Color.Primary" OnClick='() => CopyTextToClipboard(TrustedHtmlText)'>@L["Copy"]</MudButton>
    </div>
}

<script>
    window.clipboardCopy = {
        copyText: function (text, message, errorMessage) {
            const plainText = text
                .replace(/<br\s*\/?>/gi, '\n')
                .replace(/<\/p>|<\/div>/gi, '\n')
                .replace(/<[^>]+>/g, '')
                .replace(/\n{3,}/g, '\n\n');

            navigator.clipboard.writeText(plainText).then(function () {
                alert(message);
            }).catch(function (error) {
                alert(errorMessage + ": " + error);
            });
        }
    };
</script>