@if (Month != null)
{
    <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBackIosNew" OnClick="()=>SetMonth(Month.Value.AddMonths(-1))" Disabled="_updating"></MudIconButton>
        <MudButton>@Month.Value.ToString(Month.Value.Year == DateTime.Today.Year ? "MMMM" : "MMMM yyyy")</MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.ArrowForwardIos" OnClick="()=>SetMonth(Month.Value.AddMonths(1))" Disabled="_updating"></MudIconButton>
    </MudButtonGroup>
}