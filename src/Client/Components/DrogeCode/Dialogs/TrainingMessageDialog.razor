<MudDialog Visible="@Visible">
    <DialogContent>
        @if (_description?.Description is not null)
        {
            <MudMarkdown Value="@_description.Description" />
        }
        else if (_description is not null)
        {
            <MudText>@L["No description found"]</MudText>
        }
        else
        {
            <DrogeLoading />
        }
    </DialogContent>
</MudDialog>